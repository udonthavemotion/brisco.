# Environment
NODE_ENV=development
HOST=0.0.0.0
PORT=1337

# Database Configuration
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# For Production PostgreSQL (uncomment and configure)
# DATABASE_CLIENT=postgres
# DATABASE_URL=postgresql://username:password@localhost:5432/strapi_db
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=strapi_db
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=strapi
# DATABASE_SSL=false
# DATABASE_SCHEMA=public

# For Production MySQL (uncomment and configure)
# DATABASE_CLIENT=mysql
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_NAME=strapi_db
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=strapi
# DATABASE_SSL=false

# Database Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=60000

# Security Keys (CHANGE THESE IN PRODUCTION!)
APP_KEYS=toBeModified1,toBeModified2,toBeModified3,toBeModified4
API_TOKEN_SALT=toBeModified
ADMIN_JWT_SECRET=toBeModified
TRANSFER_TOKEN_SALT=toBeModified

# JWT Configuration
JWT_SECRET=toBeModified

# Admin Panel Configuration
ADMIN_PATH=/admin

# File Upload Configuration
MAX_FILE_SIZE=50000000

# Email Configuration (optional)
# SMTP_HOST=localhost
# SMTP_PORT=587
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@yourdomain.com

# Frontend URL for CORS
FRONTEND_URL=http://localhost:4321

# Strapi Cloud Configuration (if using)
# STRAPI_LICENSE_KEY=your-license-key

# Performance & Caching
CACHE_ENABLED=true
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug
