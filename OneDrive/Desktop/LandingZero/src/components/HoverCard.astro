---
// HoverCard.astro - Glass card component with hover effects
interface Props {
  title: string;
  subtitle?: string;
  class?: string;
}

const { title, subtitle, class: className } = Astro.props;
---

<article class={`rounded-2xl ring-1 ring-white/10 bg-black/20 backdrop-blur-sm transition-all duration-300 shadow-md hover:shadow-xl hover:ring-white/20 hover:bg-black/30 ${className || ''}`}>
  <div class="p-5 md:p-6">
    <h3 class="text-white font-semibold text-lg">{title}</h3>
    {subtitle && (
      <p class="text-white/70 mt-1 text-sm">{subtitle}</p>
    )}
    <slot />
  </div>
</article>
